set -eu

METTLE_ENV=${1}
KUBECONFIG=~/.kube/mettle-"${METTLE_ENV}"

function main {
        mkdir -p ~/.kube

          open "https://gangway.oidc.${METTLE_ENV}-mettle.co.uk/login"
            sleep 5
              open "https://gangway.oidc.${METTLE_ENV}-mettle.co.uk/kubeconf"
                sleep 2
                  mv ~/Downloads/kubeconf.txt "${KUBECONFIG}"
          }

main